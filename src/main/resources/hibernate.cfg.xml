<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:5432/hibernate</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Ms111111</property>
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!--disable cache 2 lelve-->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="show_sql">true</property>

        <!--drop and recreate on sturtup database schema-->
        <property name="hbm2ddl.auto">create</property>
        <!--Names the annotated entity classes-->

    </session-factory>
</hibernate-configuration>